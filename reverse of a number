import java.lang.*;
class rev
{
    public static void main(String args[])
    {
        Scanner scn=new Scanner(System.in);
        System.out.println("enter a number");
        int num=scn.nextInt();
        int rev=0;
        int d=0;
        for(int i=num;i>0;i=i/10)
        {
            d=i%10;
            rev=rev*10+d;
        }
        System.out.println("the reverse of number is "+ rev);
    }
}
